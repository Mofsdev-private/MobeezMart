@model IEnumerable<Condition>
@{
    ViewData["Title"] = "Index";
}
@*<partial name="_Notification"/>
*@<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Condition List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Condition" asp-action="Create" class=" btn btn-dark">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Condition
            </a>
        </div>
    </div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Brand Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
              
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Condition" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-dark mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Condition" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>

                </td>
            </tr>
        }
    </tbody>

</table>
</div>
